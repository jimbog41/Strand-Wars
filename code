                Console.Clear();
            }
            else if (p2moves == "3")
            {
                p2mp = p2mp + 10;
                p1mp = p1mp + 6;
                p2pp = p2pp - 7;
                Console.WriteLine("Player 2 taught everyone to be safe!");
                Console.WriteLine("Player 2 has " + p2mp + " Melo Points!");
                Console.WriteLine("Player 1 has " + p1mp + " Melo Points!");
                Console.WriteLine("Player 2 has " + p2pp + " Procrastination Points!");
                Console.ReadKey();
                Console.Clear();
            }
            else if (p2moves == "4")
            {
                p2mp = p2mp - 6;
                p1mp = p1mp - 9;
                p2pp = p2pp - 5;
                Console.WriteLine("Player 2 accepted everybody!");
                Console.WriteLine("Player 2 has " + p2mp + " Melo Points!");
                Console.WriteLine("Player 1 has " + p1mp + " Melo Points!");
                Console.WriteLine("Player 2 has " + p2pp + " Procrastination Points!");
                Console.ReadKey();
                Console.Clear();
            }
            else if (p2moves == "5" && p2letter == 1)
            {
                p2mp = p2mp + 0;
                p2pp = p2pp + 5;
                p2letter = p2letter - 1;
                Console.WriteLine("Player 2 asked for a recommendation letter!");
                Console.WriteLine("They gained 5 more PP");
                Console.WriteLine("PP is now " + p2pp);
                Console.ReadKey();
                Console.Clear();
            }
            else if (p2moves == "6" && p2honor == 1)
            {
                p2mp = p2mp + 0;
                p2pp = p2pp + 8;
                p2honor = p2honor - 1;
                Console.WriteLine("Player 2 got honors!");
                Console.WriteLine("They gained 8 more PP");
                Console.WriteLine("PP is now " + p2pp);
                Console.ReadKey();
                Console.Clear();
            }
            else if (p2letter == 0 && p2moves == "5" || p2honor == 0 && p2moves == "6")
            {
                Console.WriteLine("HUh?? You seem to be out of that!!");
                Console.ReadKey();
                Console.Clear();
            }
            else if (p2pp == 0)
            {
                Console.WriteLine("You're out of procrastination points. :( ");
            }

        }
        if (p1mp >= maxm)
        {
            Console.WriteLine("Stem Wins!");
        }
        else if (p2mp >= maxm)
        {
            Console.WriteLine("Aga Wins!");
        }
        else if (p1pp == 0)
        {
            Console.WriteLine("Yikes looks like Player 1 ran out of Procrastination Points!");
            Console.WriteLine("Guess Player 2 wins for being SO GOOD.");
        }
        else if (p2pp == 0)
        {
            Console.WriteLine("Oofen looks like Player 2 ran out of Procrastination Points!");
            Console.WriteLine("Guess Player 1 wins for being SO NICE.");
        }
    }
}



